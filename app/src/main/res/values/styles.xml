<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
   <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GVLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- custom -->

    <style name="TopBarTitleText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_TopBarTitleText</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">9</item>
    </style>

    <style name="TopBarRightText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_TopBarRightText</item>
    </style>
	<!-- ble -->
	<style name="DialogNoTitleNoActionBar" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        
    </style>
    <!-- 上拉加载，下拉刷新 -->
    <style name="RefreshTimeTV">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/pull2refresh_time_text_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/pull2refresh_time_text_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/pull2refresh_time_text_paddingHorizontal</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <!-- itemText -->
    <style name="ItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/monitor_text_gray</item>
        <item name="android:singleLine">false</item>
    </style>
    
    
     <style name="ButtonMediaOperate">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/corners_green_solid</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
<!--         <item name="android:textSize">16sp</item>
 -->        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
</resources>