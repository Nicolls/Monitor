<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="修改数据" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="标题" />

            <EditText
                android:id="@+id/modify_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="时间" />

            <EditText
                android:id="@+id/modify_et_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="地点" />

            <EditText
                android:id="@+id/modify_et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="事由" />

            <EditText
                android:id="@+id/modify_et_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/modify_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/corners_white_solid"
                android:onClick="onConfirm"
                android:text="确定"
                android:textColor="@color/monitor_green" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/corners_white_solid"
                android:onClick="onCancel"
                android:text="取消"
                android:textColor="@color/monitor_green" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>