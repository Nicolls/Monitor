<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoRecordActivity" >

    <TextureView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	<TextView 
	    android:id="@+id/video_tv_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/monitor_green"
	    android:layout_margin="20dp"
	    android:paddingLeft="7dp"
	    android:paddingRight="7dp"
	    android:paddingTop="3dp"
	    android:paddingBottom="3dp"
	    android:textSize="14sp"
	    android:background="@drawable/corners_green_bold_empty"
	    android:text="00:00:00"
	    />
    <ImageButton
        android:id="@+id/video_btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="onRecord"
        android:src="@drawable/video_record_selector"
        android:layout_margin="15dp"
        android:background="@null"
        />
    
    <ImageButton
        android:id="@+id/video_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:onClick="onBack"
        android:src="@drawable/back"
        android:layout_margin="20dp"
        android:background="@null"
        />
     
     <ImageButton
        android:id="@+id/video_btn_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:onClick="onData"
        android:src="@drawable/data"
        android:layout_margin="20dp"
        android:background="@null"
        />


</FrameLayout>